@model EntityLayer.Concrete.Heading

@{
    ViewData["Title"] = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddHeading</h1>

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar")
        @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.ValueWriter, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.ValueCategory, new {@class = "form-control"})
        <br />
        <button class="btn btn-success">Yeni Başlık Ekle</button>
    </div>
}